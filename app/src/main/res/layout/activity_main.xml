<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gr_background"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:elevation="30dp"
                android:id="@+id/seedsIcon"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_seed"
                android:layout_marginStart="8dp" />

            <TextView
                android:elevation="30dp"
                android:id="@+id/seedsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading . . ."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/lilitaoneregular"
                android:layout_marginStart="4dp"
                android:shadowColor="#80000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"/>
        </LinearLayout>

        <TextView
            android:elevation="30dp"
            android:fontFamily="@font/lilitaoneregular"
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Javocado"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="4"/>

        <ImageView
            android:elevation="30dp"
            android:id="@+id/menuIcon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu"
            android:textColor="@android:color/white"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ChapterCaspsule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_card_bg"
            android:backgroundTint="@color/avocadoLight"

            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ChapterIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_javocado_logo"
                android:contentDescription="Chapter Icon"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ChapterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading . . ."
                    android:textSize="20sp"
                    android:fontFamily="@font/lilitaoneregular"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/ProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading . . ."
                    android:textSize="14sp"
                    android:fontFamily="@font/lilitaoneregular"
                    android:textColor="@color/grayDark" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:progress="10"
                    android:max="100"
                    android:progressTint="@color/javaFlame"
                    android:backgroundTint="@color/javaFlameLight" />

            </LinearLayout>

            <ImageView
                android:id="@+id/expandChapters"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_other_chapters"
                android:layout_marginStart="16dp"
                android:contentDescription="Go to Chapter" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/lessonsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Lessons:"
        android:textSize="20sp"
        android:fontFamily="@font/lilitaoneregular"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:shadowColor="#80000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="4"/>

    <ScrollView
        android:id="@+id/lessonsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lessonsTitleTextView">

        <LinearLayout
            android:id="@+id/lessons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/menuOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gr_menu"
        android:padding="16dp"
        android:elevation="20dp"
        android:visibility="gone"
        android:layout_gravity="end"
        android:gravity="top">

        <Button
            android:id="@+id/reset_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Progress"
            android:backgroundTint="@color/javaFlame"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/ic_reset"
            android:drawablePadding="8dp"
            android:fontFamily="@font/lilitaoneregular"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_card_bg"
            android:backgroundTint="#FF9600"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress:"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:fontFamily="@font/lilitaoneregular"
                android:shadowColor="#80000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"/>

            <TextView
                android:id="@+id/progress_lessons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lessons Finished: 1"
                android:paddingLeft="10dp"
                android:fontFamily="@font/lilitaoneregular"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:shadowColor="#80000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"/>

            <TextView
                android:id="@+id/progress_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:fontFamily="@font/lilitaoneregular"
                android:text="Current Progress: 10%"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:shadowColor="#80000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_free_seeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Seeds (Ad)"
            android:layout_marginTop="12dp"
            android:drawablePadding="10dp"
            android:backgroundTint="#FFF300"
            android:textColor="@android:color/white"
            android:fontFamily="@font/lilitaoneregular"
            android:textSize="20sp"
            android:shadowColor="#80000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="4"/>

        <ImageView
            android:id="@+id/jvcdo_lg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:paddingTop="50dp"
            android:src="@drawable/ic_javocado"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/menuText_jvcdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Javocado"
            android:textColor="@android:color/white"
            android:fontFamily="@font/lilitaoneregular"
            android:textSize="28sp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/affiliate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:src="@drawable/edcore_affiliate"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>



    </FrameLayout>


</FrameLayout>